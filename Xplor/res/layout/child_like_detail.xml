<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" >

    <RelativeLayout
        android:id="@+id/Header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/Dark_White" >

        <ImageButton
            android:id="@+id/ChildLike_Cancel_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/hello"
            android:paddingBottom="@dimen/font_padding_8"
            android:paddingLeft="@dimen/font_padding_8"
            android:paddingRight="@dimen/font_padding_12"
            android:paddingTop="@dimen/font_padding_8"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/ChildLike_Title_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="Arial"
            android:text="@string/txt_Like_List"
            android:textColor="@color/Gray_Dark"
            android:textSize="@dimen/font_size_18"
            android:textStyle="normal" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/Header_layout"
        android:background="@color/list_item_drak_gray_address" />

    <ListView
        android:id="@+id/ChildLike_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:background="@android:color/transparent"
        android:divider="@color/light_gray"
        android:dividerHeight="0.7dp" />

    <View
        android:id="@+id/Bottom_Line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/ChildLike_list"
        android:background="@color/light_gray" />

</RelativeLayout>