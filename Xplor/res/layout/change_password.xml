<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark_White" >

    <RelativeLayout
        android:id="@+id/Header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/Dark_White" >

        <ImageButton
            android:id="@+id/ChangePass_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/hello"
            android:paddingBottom="@dimen/font_padding_10"
            android:paddingLeft="@dimen/font_padding_10"
            android:paddingRight="@dimen/font_padding_15"
            android:paddingTop="@dimen/font_padding_10"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/ChangePassword_Title_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="Arial"
            android:text="@string/txt_Settings"
            android:textColor="@color/Gray_Dark"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/Header_layout"
        android:background="@color/light_gray" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/Top_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ChangePassword_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="Arial"
                android:gravity="left"
                android:padding="@dimen/font_padding_8"
                android:text="@string/txt_change_password"
                android:textColor="@color/Gray_Dark"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ChangePassword_Txt"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/ChangePass_OldPass_Edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view_line_1"
                android:background="@color/White"
                android:ems="10"
                android:fontFamily="Airal"
                android:hint="Old password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/font_padding_8"
                android:textColor="@color/Black"
                android:textSize="@dimen/font_size_14"
                android:textStyle="normal" />

            <View
                android:id="@+id/view_line_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ChangePass_OldPass_Edt"
                android:background="@color/light_gray" />

            <View
                android:id="@+id/view_line_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/view_line_2"
                android:layout_marginTop="@dimen/font_margin_15"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/ChangePass_NewPass_Edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view_line_3"
                android:background="@color/White"
                android:ems="10"
                android:fontFamily="Airal"
                android:hint="New password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/font_padding_8"
                android:textColor="@color/Black"
                android:textSize="@dimen/font_size_14"
                android:textStyle="normal" />

            <View
                android:id="@+id/view_line_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ChangePass_NewPass_Edt"
                android:layout_marginLeft="@dimen/font_padding_10"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/ChangePass_ConfiPass_Edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view_line_4"
                android:background="@color/White"
                android:ems="10"
                android:fontFamily="Airal"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/font_padding_8"
                android:textColor="@color/Black"
                android:textSize="@dimen/font_size_14"
                android:textStyle="normal" />

            <View
                android:id="@+id/view_line_5"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/ChangePass_ConfiPass_Edt"
                android:background="@color/light_gray" />

            <Button
                android:id="@+id/ChangePass_Submit_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view_line_5"
                android:layout_marginLeft="@dimen/font_margin_20"
                android:layout_marginRight="@dimen/font_margin_20"
                android:layout_marginTop="@dimen/font_margin_40"
                android:background="@drawable/button_login_selector"
                android:fontFamily="Airal"
                android:padding="@dimen/font_padding_10"
                android:text="Submit"
                android:textColor="@color/White"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_margin_10"
                android:layout_below="@+id/ChangePass_Submit_Btn" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>