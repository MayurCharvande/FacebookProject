<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:minHeight="@dimen/font_margin_40"
    android:orientation="vertical"
    android:weightSum="2" >

    <RelativeLayout
        android:id="@+id/calender_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:fontFamily="Arial"
            android:textColor="#0000D7"
            android:textSize="@dimen/font_size_14"
            android:textStyle="normal" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_Shift_Indicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@color/calender_back_green"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/txt_Shift_Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_blue_oval"
            android:fontFamily="Arial"
            android:gravity="center"
            android:padding="3dp"
            android:text="S"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_8"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

</LinearLayout>