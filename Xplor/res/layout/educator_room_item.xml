<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White" >

    <RelativeLayout
        android:id="@+id/Center_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/font_padding_5" >

        <Button
            android:id="@+id/Room_Item_Btn"
            android:layout_width="@dimen/room_button_WH"
            android:layout_height="@dimen/room_button_WH"
            android:background="@drawable/button_blue_selector"
            android:fontFamily="Airal"
            android:text="Nursery"
            android:textColor="@color/Black"
            android:textSize="@dimen/font_size_16"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/Room_Item_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/Room_Item_Btn"
            android:layout_alignTop="@+id/Room_Item_Btn"
            android:layout_marginTop="5dp"
            android:background="@drawable/item_count"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/White"
            android:textSize="@dimen/font_size_14" />
    </RelativeLayout>

</RelativeLayout>