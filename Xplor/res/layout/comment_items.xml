<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White" >

    <ImageView
        android:id="@+id/CommentItm_User_Img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/hello"
        android:scaleType="centerCrop"
        android:src="@drawable/child_icon" />

    <TextView
        android:id="@+id/CommentItm_Name_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_margin_5"
        android:layout_marginRight="@dimen/font_margin_5"
        android:layout_toRightOf="@+id/CommentItm_User_Img"
        android:fontFamily="Airal"
        android:text=""
        android:textColor="@color/Black"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CommentItm_msg_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CommentItm_Name_Txt"
        android:layout_marginLeft="@dimen/font_margin_5"
        android:layout_marginRight="@dimen/font_margin_5"
        android:layout_toRightOf="@+id/CommentItm_User_Img"
        android:fontFamily="Airal"
        android:text=""
        android:textColor="@color/Black"
        android:textSize="@dimen/font_size_12"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/CommentItm_Date_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CommentItm_msg_Txt"
        android:layout_marginLeft="@dimen/font_margin_5"
        android:layout_marginRight="@dimen/font_margin_5"
        android:layout_toRightOf="@+id/CommentItm_User_Img"
        android:fontFamily="Airal"
        android:text=""
        android:textColor="@color/list_item_drak_gray_address"
        android:textSize="@dimen/font_size_12"
        android:textStyle="normal" />

</RelativeLayout>