<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/break_history_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Arial"
        android:gravity="center"
        android:text="Thursday 16/04/2015"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/break_history_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Arial"
        android:gravity="center"
        android:text="shift time : 00:00"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/break_history_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Arial"
        android:gravity="center"
        android:text="Duration : 02:30 (Hrs:Min)"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/break_history_brack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Arial"
        android:gravity="center"
        android:text="Break Hours : No Break"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/break_history_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Arial"
        android:gravity="center"
        android:text="Room : NA"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_16" />

</LinearLayout>