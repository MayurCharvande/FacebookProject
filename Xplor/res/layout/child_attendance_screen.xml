<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" >

    <RelativeLayout
        android:id="@+id/Header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/Dark_White" >

        <ImageView
            android:id="@+id/ChildAttendance_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/hello"
            android:padding="@dimen/font_padding_5"
            android:src="@drawable/splash" />

        <Button
            android:id="@+id/ChildAttendance_Dismiss_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:fontFamily="Airal"
            android:padding="@dimen/font_padding_10"
            android:text="Dismiss"
            android:textColor="@color/Green_Light"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/Header_layout"
        android:background="@color/Gray_Dark" />

    <TextView
        android:id="@+id/ChildAttendance_Title_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:fontFamily="Arial"
        android:padding="@dimen/font_padding_5"
        android:gravity="center_horizontal"
        android:text="@string/txt_child_attendance"
        android:textColor="@color/Gray_Dark"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_line_1"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@+id/ChildAttendance_Title_Txt"
        android:background="@color/Gray_Dark" />

    <ListView
        android:id="@+id/ChildAttendance_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line_1"
        android:divider="@color/list_item_drak_gray_address"
        android:dividerHeight="0.8dp"
        android:scrollbars="none" />

</RelativeLayout>