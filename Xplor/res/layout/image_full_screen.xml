<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black" >

    <com.xplor.common.TouchImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:id="@+id/Header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent_black_75"
        android:clickable="true" >

        <Button
            android:id="@+id/FullImg_Done_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/font_margin_5"
            android:layout_marginTop="@dimen/font_margin_5"
            android:background="@drawable/round_bg_black"
            android:fontFamily="Airal"
            android:paddingLeft="@dimen/font_padding_15"
            android:paddingRight="@dimen/font_padding_15"
            android:text="@string/txt_Done"
            android:textColor="@color/White"
            android:textSize="@dimen/font_size_16"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/Learning_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/FullImg_Done_Btn"
            android:padding="@dimen/font_padding_5" >

            <ImageView
                android:id="@+id/ChildPost_Learning_Img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/font_margin_8"
                android:adjustViewBounds="true"
                android:contentDescription="@string/hello"
                android:src="@drawable/activity_blue" />

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ChildPost_Learning_Img"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/ChildPost_Learning_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="Arial"
                        android:scrollbars="vertical"
                        android:textColor="@color/White"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="normal" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <View
            android:id="@+id/view_line_2"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/Learning_layout"
            android:background="@color/White" />

        <RelativeLayout
            android:id="@+id/Activity_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_below="@+id/view_line_2"
            android:padding="@dimen/font_padding_5" >

            <ImageView
                android:id="@+id/ChildPost_Activity_Img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/font_margin_8"
                android:adjustViewBounds="true"
                android:contentDescription="@string/hello"
                android:src="@drawable/activity_blue" />

            <ScrollView
                android:id="@+id/scrollView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ChildPost_Activity_Img"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/ChildPost_Activity_Txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="Arial"
                        android:scrollbars="vertical"
                        android:textColor="@color/White"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="normal" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <View
            android:id="@+id/view_line_3"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/Activity_layout"
            android:background="@color/White" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_black_75" >

        <TextView
            android:id="@+id/FullImg_Message_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/font_margin_10"
            android:layout_marginTop="@dimen/font_margin_5"
            android:fontFamily="Airal"
            android:text="Text teet"
            android:textColor="@color/White"
            android:textSize="@dimen/font_size_16"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/Tags_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FullImg_Message_Txt"
            android:padding="@dimen/font_padding_10" >

            <TextView
                android:id="@+id/ChildPost_TagsGray_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/font_margin_5"
                android:fontFamily="Arial"
                android:scrollbars="vertical"
                android:text="with"
                android:textColor="@color/White"
                android:textSize="@dimen/font_size_14"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/ChildPost_TagsBlue_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_margin_5"
                android:layout_toRightOf="@+id/ChildPost_TagsGray_Txt"
                android:fontFamily="Arial"
                android:scrollbars="vertical"
                android:text="shaew"
                android:textColor="@color/Green_Light"
                android:textSize="@dimen/font_size_16"
                android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>